<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <GridLayout
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:rowCount="4"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    >

    <Button
        android:id="@+id/button40"
        android:layout_margin="4dp"
        android:layout_gravity="fill"
        android:text="40" />
    <Button
        android:id="@+id/button50"
        android:layout_margin="4dp"
        android:layout_gravity="fill"
        android:text="50" />
    <Button
        android:id="@+id/button60"
        android:layout_margin="4dp"
        android:layout_gravity="fill"
        android:text="60" />
    <Button
        android:id="@+id/button70"
        android:layout_margin="4dp"
        android:layout_gravity="fill"
        android:text="70" />
    <Button
        android:id="@+id/button80"
        android:layout_margin="4dp"
        android:layout_gravity="fill"
        android:text="80" />
    <Button
        android:id="@+id/button90"
        android:layout_margin="4dp"
        android:layout_gravity="fill"
        android:text="90" />
    <Button
        android:id="@+id/button100"
        android:layout_margin="4dp"
        android:layout_gravity="fill"
        android:text="100" />
    <Button
        android:id="@+id/button110"
        android:layout_margin="4dp"
        android:layout_gravity="fill"
        android:text="110" />
    <Button
        android:id="@+id/button120"
        android:layout_margin="8dp"
        android:layout_gravity="fill"
        android:text="120" />
    <Button
        android:id="@+id/button130"
        android:layout_margin="4dp"
        android:layout_gravity="fill"
        android:text="130" />
    <Button
        android:id="@+id/button140"
        android:layout_margin="8dp"
        android:layout_gravity="fill"
        android:text="140" />
    <Button
        android:id="@+id/button150"
        android:layout_margin="4dp"
        android:layout_gravity="fill"
        android:text="150" />
    <Button
        android:id="@+id/button160"
        android:layout_margin="4dp"
        android:layout_gravity="fill"
        android:text="160" />
    <Button
        android:id="@+id/button170"
        android:layout_margin="4dp"
        android:layout_gravity="fill"
        android:text="170" />
    <Button
        android:id="@+id/button180"
        android:layout_margin="4dp"
        android:layout_gravity="fill"
        android:text="180" />
    <Button
        android:id="@+id/button190"
        android:layout_margin="4dp"
        android:layout_gravity="fill"
        android:text="190" />

</GridLayout>

    <LinearLayout
        android:id="@+id/startStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout">

        <Button
            android:id="@+id/startButton"
            android:layout_width="fill_parent"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:text="Start" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="fill_parent"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:text="Stop" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/topFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/startStop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="METRONOME"
            android:layout_gravity="center"
            android:textSize="24sp" />

    </FrameLayout>






</androidx.constraintlayout.widget.ConstraintLayout>