<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            android:layout_weight="1"


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            android:layout_weight="1"
        </LinearLayout>

    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"

        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent=".5"

        >

        <Button
            android:id="@+id/button40"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:text="40" />

        <Button
            android:id="@+id/button50"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:text="50" />

        <Button
            android:id="@+id/button60"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:text="60" />

        <Button
            android:id="@+id/button70"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:text="70" />

        <Button
            android:id="@+id/button80"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:text="80" />

        <Button
            android:id="@+id/button90"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:text="90" />

        <Button
            android:id="@+id/button100"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:text="100" />

        <Button
            android:id="@+id/button110"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:text="110" />

        <Button
            android:id="@+id/button120"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:text="120" />

        <Button
            android:id="@+id/button130"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:text="130" />

        <Button
            android:id="@+id/button140"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:text="140" />

        <Button
            android:id="@+id/button150"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:text="150" />

        <Button
            android:id="@+id/button160"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:text="160" />

        <Button
            android:id="@+id/button170"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:text="170" />

        <Button
            android:id="@+id/button180"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:text="180" />

        <Button
            android:id="@+id/button190"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:text="190" />

    </GridLayout>

    <LinearLayout
        android:id="@+id/startStop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintWidth_percent=".5"

        >

        <Button
            android:id="@+id/startButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Start" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Stop" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>